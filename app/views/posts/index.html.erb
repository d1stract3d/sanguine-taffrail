<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm">
    <h1>Posts</h1>
  </div>
</div>
<br><br>
<div class="row pl-3">
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @posts.reverse_each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'View', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: {confirm: 'Are yah sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br><br>
<div class="row pl-4">
  <button class="btn btn-outline-dark"><%= link_to 'New Post', new_post_path %></button>
</div>